import java.util.Scanner;
public class Bonus
{
public static void main (String[]args)
	{
	Scanner i = new Scanner (System.in);
	int belibaju;
	int bonusbaju;
	int totalbaju;
	int harga = 50000;
	int hargatotal;
	int total;
	int a;

	System.out.print("Masukkan jumlah baju yang dibawa pulang = ");
	total = i.nextInt();
	bonusbaju = total / 3;
	belibaju = total - bonusbaju;
	
	a = belibaju / 2;
	if (a == bonusbaju ) 
		{
		System.out.println("Baju yang dibeli = " +belibaju );
		System.out.println("Bonus baju = " +bonusbaju );
		hargatotal = belibaju * harga;
		System.out.println("Total = Rp." +hargatotal );
		}

	else 
		{
		System.out.println("Baju yang dibeli = " +belibaju );
		System.out.println("Bonus baju = " +bonusbaju );
		hargatotal = belibaju * harga;
		System.out.println("Total = Rp." +hargatotal );
		System.out.println("Pelanggan berhak mendapat tambahan bonus 1 baju");
			
}}}
